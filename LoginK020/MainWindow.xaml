<Window x:Class="LoginK020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginK020"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="400" Height="250" Background="LightGray">
        <TextBox VerticalAlignment="Center" Margin="10 50 10 0" FontSize="20" Text="Email"  AcceptsReturn="True"> </TextBox>

        <PasswordBox VerticalAlignment="Center" Margin="10 50 10 0" FontSize="20" Password=""></PasswordBox>
        <Button Margin="10 50 10 0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Background="Navy" Foreground="White"> Entrar </Button>
        <RichTextBox Margin="10" FontSize="20" Visibility="Hidden"></RichTextBox>
    </StackPanel>
</Window>
